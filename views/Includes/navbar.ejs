<style>
  /* Styles for the search bar */
  .search-input {
    border: 2px solid #ddd;
    border-radius: 25px;
    padding: 8px 15px;
    width: 250px;
    font-size: 16px;
    transition: all 0.3s ease-in-out;
  }

  .search-input:focus {
    outline: none;
    border-color: #ff4d4d;
    box-shadow: 0 0 5px rgba(255, 77, 77, 0.5);
  }

  .search-btn {
    background-color: #ff4d4d;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 8px 15px;
    font-size: 16px;
    transition: background 0.3s ease-in-out;
  }

  .search-btn:hover {
    background-color: #e63939;
  }

  /* Hide search bar on small screens when navbar collapses */
  @media (max-width: 992px) {
    .navbar-nav form {
      display: none !important;
    }
  }

  /* Ensure visibility on large screens */
  @media (min-width: 993px) {
    .navbar-nav form {
      display: flex !important;
    }
  }
</style>

<nav
  class="navbar navbar-expand-md bg-dark bg-body-tertiary h-25 sticky-top border-bottom"
  style="background-color: blueviolet"
>
  <div class="container input-group">
    <a class="navbar-brand" style="color: rgb(37, 37, 151)" href="/">
      <i class="fa-regular fa-compass"></i>
      <span class="logo">WonderLust</span>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="collapse navbar-collapse justify-content-start"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav text-center">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search Destination"
          />
          <button class="btn search-btn" type="submit">Search</button>
        </form>
      </div>
      <div class="navbar-nav text-center ms-auto">
        <a class="nav-link" href="/listings/new">Add your home</a>
        <% if(!currUser){ %>
        <a class="nav-link" aria-current="page" href="/signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if(currUser){ %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
